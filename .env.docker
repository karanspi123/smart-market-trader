# Environment variables for Smart Market Analyzer (Docker)

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# MongoDB Configuration
MONGODB_URI=mongodb://mongo:27017/smartmarket

# NinjaTrader API Configuration
NINJATRADER_API_KEY=your_api_key_here
NINJATRADER_BASE_URL=http://api.ninjatrader.com

# Portfolio Configuration
INITIAL_CAPITAL=100000
RISK_PER_TRADE=0.02
MAX_CORRELATED_RISK=0.06
MAX_DRAWDOWN=0.15

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001

# Configuration Path
CONFIG_PATH=config/config.json
